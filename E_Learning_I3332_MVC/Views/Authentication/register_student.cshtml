@model Students

@{
    ViewData["Title"] = "Register student";
    string userId = TempData["UserId"] as string;

    List<Specializations> specializations = ViewData["specializations"] as List<Specializations>;
}

<div class="container my-16 ">
    <div class="mx-10">
        <h2 class="text-3xl font-semibold">Complete your info</h2>
        <form asp-controller="Authentication" asp-action="RegisterStudentSave" method="post" class="w-full mt-4 max-w-xl validateForm">
            <input type="text" name="UserId" value="@userId" hidden required>
            <div class="mt-4">
                <label asp-for="PhoneNumer">Phone number</label>
                <input type="text" asp-for="PhoneNumer" placeholder="Phone number" class="w-full border-gray-300 rounded-md mt-2">
            </div>
            <div class="mt-4">
                <label asp-for="SpecializationId">Specialization</label>
                <select name="SpecializationId" id=""  required class="w-full border-gray-300 rounded-md mt-2 py-2 px-3">
                    @foreach (var spec in specializations)
                    {
                        <option value="@spec.SpecializationId">@spec.SpecializationName</option>
                    }
                </select>

            </div>
            <button type="submit" class="mt-6 border border-primary text-white bg-primary py-2 px-4 rounded-md transition-colors hover:bg-white hover:text-primary">
                Submit
            </button>
        </form>
    </div>
</div>
