@model Users

@{
    ViewData["Title"] = "Register";
    string returnUrl = TempData["ReturnUrl"] as string;

    <p>
        @TempData["error"]
    </p>

}

<div class="container my-16 ">
    <div class="mx-10">
        <h2 class="text-3xl font-semibold">Register</h2>
        <form asp-controller="Authentication" asp-action="RegisterSave" method="post" class="w-full mt-4 max-w-xl validateForm">
            <input type="text" name="ReturnUrl" value="@returnUrl" hidden>
            <div class="mt-4">
                <label asp-for="FirstName">First name</label>
                <input type="text" asp-for="FirstName" placeholder="First Name" required class="w-full border-gray-300 rounded-md mt-2">
            </div>
            <div class="mt-4">
                <label asp-for="LastName">Last name</label>
                <input type="text" asp-for="LastName" placeholder="Last Name" required class="w-full border-gray-300 rounded-md mt-2">
            </div>

            <div class="mt-4">
                <label asp-for="Email">E-mail</label>
                <input type="email" asp-for="Email" placeholder="yourname@schoolname.edu" required class="w-full border-gray-300 rounded-md mt-2">
            </div>
            <div class="mt-4">
                <label asp-for="Password">Password</label>
                <input type="password" minlength="3" asp-for="Password" placeholder="********" required class="w-full border-gray-300 rounded-md mt-2">
                <span asp-validation-for="Password" class="text-red-600"></span>
            </div>
            <button type="submit" class="mt-6 border border-primary text-white bg-primary py-2 px-4 rounded-md transition-colors hover:bg-white hover:text-primary">
                Register
            </button>
        </form>
        <p class="mt-4">
            <a asp-controller="Authentication" asp-action="login" class="text-primary">Login instead</a>
        </p>
    </div>
</div>
